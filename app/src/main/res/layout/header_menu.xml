<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple"
    android:orientation="vertical"
    tools:context=".ActivityMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:background="#FFFF66"
        android:gravity="bottom"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="194dp"
            android:layout_height="82dp"
            android:layout_marginEnd="204dp"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/menu_bap" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="194dp"
            android:layout_height="82dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_phim" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="125dp"
            android:layout_marginTop="90dp"
            android:text="FiveBoys"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="48dp"
            android:layout_marginTop="5dp"
            android:text="Trải nghiệm bộ phim chân thật nhất"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_purple"
        android:onClick="DangNhap"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="203dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/btnlogin" />

        <TextView
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:background="?attr/selectableItemBackground"
            android:text="Đăng nhập"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:autoSizeTextType="none" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:background="#ED6F66"
        android:onClick="DanhSachPhim"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="229dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/btndanhsach" />

        <TextView
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"

            android:text="Danh sách phim"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:background="@android:color/holo_green_light"
        android:onClick="ThongTinCaNhan"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="229dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/btnuser" />

        <TextView
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"

            android:text="Thông tin cá nhân"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2E92E1"
        android:onClick="BackMHTC"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/btnhome" />

        <TextView
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"

            android:text="Quay lại trang chủ"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>