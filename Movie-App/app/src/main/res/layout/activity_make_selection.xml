<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:padding="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backhome"
            android:padding="5dp"
            android:onClick="Back"/>

        <TextView
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/muli_black"
            android:text="HÃY LỰA CHỌN"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/title_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/muli"
            android:text="Chọn liên hệ lấy mã OTP để đặt lại mật khẩu của bạn?"
            android:textColor="#000"
            android:textSize="27sp" />

        <RelativeLayout
            android:id="@+id/sms"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="#DAE8EA"
            android:padding="10dp">
            <ImageView
                android:id="@+id/mobile_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/phone"
                 android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/muli"
                android:text="SMS:"
                android:textColor="#000"
                android:textSize="25sp"
                android:layout_toRightOf="@id/mobile_icon"/>

            <TextView
                android:id="@+id/mobile_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/muli"
                android:text="0911129665"
                android:textColor="#000"
                android:textSize="25sp"
                android:layout_toRightOf="@id/mobile_icon"
                android:layout_below="@id/mobile_title"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:onClick="Continue" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="#DAE8EA"
            android:padding="10dp">
            <ImageView
                android:id="@+id/gmail_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/gmail"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/gmail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/muli"
                android:text="Mail:"
                android:textColor="#000"
                android:textSize="25sp"
                android:layout_toRightOf="@id/gmail_icon"/>

            <TextView
                android:id="@+id/gmail_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/muli"
                android:text="tamhen333@gmail.com"
                android:textColor="#000"
                android:textSize="25sp"
                android:layout_toRightOf="@id/gmail_icon"
                android:layout_below="@id/gmail_title"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:onClick="Continue" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>